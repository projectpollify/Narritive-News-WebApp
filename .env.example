# Database (REQUIRED)
# For development (SQLite):
# DATABASE_URL="file:./dev.db"
# For production (PostgreSQL):
DATABASE_URL="postgresql://username:password@localhost:5432/narrative_news?schema=public"

# AI Services (REQUIRED)
OPENAI_API_KEY="your-openai-api-key-here"

# Authentication (REQUIRED)
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-min-32-characters-long"

# Cron Job Security (REQUIRED for production)
# Generate a secure secret for Vercel Cron authentication
CRON_SECRET="your-cron-secret-here"

# Email Service (OPTIONAL - for newsletters)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@narrativenews.org"

# Site Configuration
SITE_URL="http://localhost:3000"
SITE_NAME="Narrative News"

# Automation Configuration
ENABLE_AUTOMATION=false
AUTOMATION_INTERVAL_HOURS=6

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL="info"

# Analytics (OPTIONAL)
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# News APIs (OPTIONAL - for future enhanced scraping)
NEWS_API_KEY="your-newsapi-key"
GUARDIAN_API_KEY="your-guardian-api-key"

# Environment
NODE_ENV="development"