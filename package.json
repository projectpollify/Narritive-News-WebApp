{
  "name": "narrative-news",
  "version": "1.0.0",
  "description": "AI-powered news analysis platform showing multiple perspectives on current events",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "prisma db push && next build",
    "start": "next start -p 3002",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "analyze": "cross-env ANALYZE=true next build",
    "export": "next export",
    "postinstall": "prisma generate",
    "production:setup": "npm run db:migrate:deploy && npm run db:seed",
    "health-check": "node scripts/health-check.js",
    "backup": "node scripts/backup-db.js"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@irys/upload": "^0.0.15",
    "@irys/upload-ethereum": "^0.0.16",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@next/bundle-analyzer": "^14.2.33",
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.0.0-rc.12",
    "clsx": "^2.0.0",
    "compromise": "^14.14.4",
    "cron": "^3.1.6",
    "date-fns": "^2.30.0",
    "ioredis": "^5.8.1",
    "lucide-react": "^0.545.0",
    "next": "^14.0.4",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0",
    "rss-parser": "^3.13.0",
    "tailwind-merge": "^2.2.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "prisma": "^5.7.1",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "web-streams-polyfill": "^4.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "keywords": [
    "news",
    "ai",
    "analysis",
    "bias",
    "media-literacy",
    "journalism",
    "polarization",
    "fact-checking",
    "left-vs-right",
    "perspective",
    "automation",
    "nextjs",
    "typescript",
    "gpt-4",
    "openai"
  ],
  "author": {
    "name": "Narrative News",
    "email": "contact@narrativenews.org"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/narrative-news.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/narrative-news/issues"
  },
  "homepage": "https://narrativenews.org"
}
